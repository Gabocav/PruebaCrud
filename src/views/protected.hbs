<h1>{{message}}</h1>
<main class="mt-5">
    <div class="container">
        <div class="card mx-auto">
            <div class="card-header">
                <h1 class="text-center">Prueba Tecnica Baguer</h1>
            </div>
            <div class="card-body">
                <p class="text-center">Gestion de Usuarios</p>
                <div class="d-flex justify-content-center">
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                        data-bs-target="#createUserModal">
                        Crear Usuario
                    </button>
                </div>
                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre</th>
                            <th>Pais</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each usuarios}}
                        <tr>
                            <td>{{@index}}</td>
                            <td>{{nombre}}</td>
                            <td>{{pais}}</td>
                            <td>
                                <button type="button" class="btn btn-info" data-bs-toggle="modal"
                                    data-bs-target="#viewUserModal{{@index}}">Ver</button>
                                <button type="button" class="btn btn-warning" data-bs-toggle="modal"
                                    data-bs-target="#editUserModal{{@index}}">Editar</button>
                                <button type="button" class="btn btn-danger" data-bs-toggle="modal"
                                    data-bs-target="#deleteUserModal{{@index}}">Eliminar</button>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!-- Modal para crear -->
    {{#each usuarios}}
        <div class="modal fade" id="createUserModal" tabindex="-1" aria-labelledby="createUserModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="createUserModalLabel">Crear Usuario</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <!-- Aquí puedes poner tu formulario para crear un usuario -->
                        <form method="POST">
                            <div class="mb-3">
                                <label for="usuario" class="form-label">Usuario</label>
                                <input type="text" class="form-control" id="usuario" name="usuario" required>
                            </div>
                            <div class="mb-3">
                                <label for="clave" class="form-label">Clave</label>
                                <input type="password" class="form-control" id="clave" name="clave" required>
                            </div>
                            <div class="mb-3">
                                <label for="Nombre" class="form-label">Nombre</label>
                                <input type="text" class="form-control" id="Nombre" name="Nombre">
                            </div>
                            <div class="mb-3">
                                <label for="roleId" class="form-label">Role ID</label>
                                <input type="number" class="form-control" id="roleId" name="roleId">
                            </div>
                            <button type="submit" class="btn btn-primary">Crear</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}

    <!-- Modal para ver detalles -->
    {{#each usuarios}}
    <div class="modal fade" id="viewUserModal{{@index}}" tabindex="-1" aria-labelledby="viewUserModalLabel{{@index}}"
        aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="viewUserModalLabel{{@index}}">Detalles del Usuario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Aquí puedes poner la información del usuario -->
                    <p>Género: {{this.genero}}</p>
                    <p>Nombre: {{this.nombre}}</p>
                    <p>Teléfono: {{this.telefono}}</p>
                    <p>Email: {{this.email}}</p>
                    <p>Dirección: {{this.direccion}}</p>
                    <p>Pais: {{this.pais}}</p>
                    <p>Estado: {{this.estado}}</p>
                    <p>Ciudad: {{this.ciudad}}</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}

    <!-- Modal para editar -->
    {{#each usuarios}}
    <div class="modal fade" id="editUserModal{{@index}}" tabindex="-1" aria-labelledby="editUserModalLabel{{@index}}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editUserModalLabel{{@index}}">Editar Usuario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Aquí puedes poner tu formulario para editar un usuario -->
                    <form method="POST">
                        <div class="mb-3">
                            <label for="nombre" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" value="{{this.nombre}}">
                        </div>
                        <div class="mb-3">
                            <label for="pais" class="form-label">Pais</label>
                            <input type="text" class="form-control" id="pais" name="pais" value="{{this.pais}}">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" value="{{this.email}}">
                        </div>
                        <div class="mb-3">
                            <label for="direccion" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="direccion" name="direccion" value="{{this.direccion}}">
                        </div>
                        <button type="submit" class="btn btn-primary">Guardar</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-primary">Guardar cambios</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
    
    <!-- Modal para eliminar -->
    {{#each usuarios}}
    <div class="modal fade" id="deleteUserModal{{@index}}" tabindex="-1" aria-labelledby="deleteUserModalLabel{{@index}}" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteUserModalLabel{{@index}}">Eliminar Usuario</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que quieres eliminar a este usuario?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-danger">Eliminar</button>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</main>